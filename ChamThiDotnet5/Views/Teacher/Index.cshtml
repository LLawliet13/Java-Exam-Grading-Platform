                                    <tr>
                                        <th scope="col">Student ID</th>
                                        <th scope="col">Student Name</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 0;
                                        if (@ViewBag.StudentList != null)
                                            @foreach (var s in @ViewBag.StudentList)
                                            {
                                                index++;
                                                <tr>
                                                    <td>@index</td>
                                                    <td>@s.Studentname</td>
                                                    <td>__</td>
                                                </tr>
                                            }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
                <div class="u-align-left u-container-style u-tab-pane u-white u-tab-pane-2" id="tab-14b7" role="tabpanel" aria-labelledby="link-tab-14b7">
                    <div class="u-container-layout u-container-layout-2">

                        <div class="row">
                            <div class="col-sm-5">
                                <!-- Get all the files from the server -->
                                <ul style="margin: 50px auto 100px auto">
                                    <li class="list-group-item active"><strong>List of Exam Files</strong></li>
                                    @foreach (var item in Model.Files)
                                    {
                                        <li class="list-group-item">
                                            <a asp-action="Download" asp-controller="Loadfile" asp-route-filename="@item.Name">
                                                @item.Name
                                            </a>
                                        </li>
                                        <form asp-action="DeleteFile" asp-controller="Loadfile" method="POST">
                                            <input name="filename" type="hidden" value="@item.Name" />
                                            <input type="submit" value="Delete">
                                        </form>
                                    }
                                </ul>
                            </div>
                            <div class="col-sm-7">
                                <p style="margin:10px 10%">
                                    <button class="btn btn-primary" style="
                                color: #ffffff !important;
                                background-color: #40bb25 !important;
                                border: none;
                                border-radius: 0;
                                font-size: 0.875rem;
                                letter-spacing: 1px;
                                font-weight: 700;
                                text-transform: uppercase;
