                    @*Class*@
                    <div class="leftcolumn">
                        <div class="cards">
                            <h4>CLASS INFORMATION</h4>
                            @*<partial name="_ClassName" />*@

                            <div class="dropdown" style="z-index:1;margin: 20px 50px;">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"
                                        style="color: #ffffff !important;
                                        background-color: #40bb25 !important;
                                        border: none;
                                        border-radius: 0;
                                        font-size: 0.875rem;
                                        letter-spacing: 1px;
                                        font-weight: 700;
                                        text-transform: uppercase;
                                        background-image: none;
                                        border-style: none;
                                        padding: 10px 20px;">
                                    Class Name
                                </button>
                                <ul class="dropdown-menu">
                                    @{
                                        @if (ViewBag.ClassList != null)
                                            foreach (Class cl in ViewBag.ClassList)
                                            {
                                                <li><a href="/Teacher/Index/@cl.Id">@cl.Classname</a></li>
                                            }
                                    }
                                </ul>
                            </div>
                            <div>
                                @if (ViewData["ClassName"] != null)
                                {
                                    <h6>Class @ViewData["ClassName"]: @ViewData["StudentNum"] Students</h6>
                                    <a href="/Teacher/ExamResult/classid=@ViewData["ClassId"]">View Test History</a>
                                }
                                else
                                {
                                    <h6>Class information...</h6>
                                }

                            </div>


                        </div>
                        @if (ViewData["AddExam"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                <strong>Success!</strong> @ViewData["AddExam"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        @if (@ViewData["ClassId"] != null)
                        {
                            @if (@ViewData["StudentNum"].ToString() != "0")
                            {
                                <div class="cards">
                                    <h4>ADD TEST SCHEDULE</h4>
                                    @*<partial name="_AddExam" />*@
                                    <div class="u-form u-form-1">
                                        <form asp-action="AddTest" method="post">
                                            <input type="hidden" id="classid" name="classid" value="@ViewData["ClassId"]">
                                            <div class="u-form-group u-form-select u-form-group-1">
                                                <label for="select-0641" class="u-label">Exam</label>
                                                <div class="u-form-select-wrapper">
                                                    <select id="select-0641" name="exam" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required" autofocus="autofocus">
                                                        @if (@ViewBag.Exam != null)
                                                            @foreach (var e in @ViewBag.Exam)
                                                            {
                                                                <option value="@e.Id">@e.Examname</option>
                                                            }
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="u-form-group u-form-name">
                                                <label for="name-ba83" class="u-label">Time Start</label>
                                                <input type="datetime-local" name="start" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required" autofocus="autofocus">
                                            </div>
                                            <div class="u-form-group u-form-name">
                                                <label for="email-ba83" class="u-label">Time End</label>
                                                <input type="datetime-local" name="end" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required="required" autofocus="autofocus">
                                            </div>
                                            <div class="u-align-left u-form-group u-form-submit">
                                                <button type="submit" class="u-border-none u-btn u-btn-submit u-button-style u-custom-color-5 u-hover-palette-1-dark-3 u-btn-1" style="color: #ffffff !important;background-color: #40bb25 !important;">Add Test</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
